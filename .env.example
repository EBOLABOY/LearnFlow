# Copy this file to `.env` and fill in your environment-specific values.
# Do NOT commit your real .env file.

# MySQL database
DB_HOST=localhost
DB_PORT=3306
DB_USER=your_db_user
DB_PASSWORD=your_db_password
DB_DATABASE=learnflow

# JWT secret used for admin auth. Must be 32+ characters.
# Generate a random value (e.g., via `openssl rand -hex 48`).
JWT_SECRET=change_me_to_a_very_long_random_secret_value

# CORS (optional): Allowed origin for admin panel/API requests
# Example: https://your-admin-frontend.example.com
CORS_ORIGIN=http://localhost:3000

